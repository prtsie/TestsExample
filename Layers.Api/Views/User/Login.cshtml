@model Layers.Application.Requests.LoginRequest?

@{
    ViewData["Title"] = "Вход";
}

<div class="container mt-5">
    <h2>Войдите в свой аккаунт</h2>
    <form method="post">
        <div class="col-3 mb-3">
            <label asp-for="Name" class="form-label">Имя пользователя</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-3 mb-3">
            <label asp-for="Password" class="form-label">Пароль</label>
            <input type="password" asp-for="Password" class="form-control">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <input type="submit" class="btn btn-primary" value="Войти"/>
        @if (Model is not null)
        {
            <p class="text-danger">Неверный логин или пароль</p>
        }
    </form>
</div>